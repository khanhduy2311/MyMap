extends ../views/layouts/default.pug

block main
  .container.mt-4
    .row.justify-content-center
      .col-lg-8
        .card
          .card-body
            h2.card-title.text-center.mb-3 Tải lên tài liệu để tóm tắt
            p.text-center.text-muted.mb-4 Chọn file PDF hoặc DOCX. AI sẽ đọc và tóm tắt nội dung cho bạn.
            
            //- Form Upload
            form(action="/upload/summarize" method="POST" enctype="multipart/form-data")
              .mb-3
                label.form-label(for="documentFile") Chọn tài liệu
                input.form-control(type="file" name="documentFile" id="documentFile" accept=".pdf,.docx" required)
              
              .d-grid
                button.btn.btn-primary.btn-lg(type="submit")
                  i.fas.fa-robot.me-2
                  | Bắt đầu tóm tắt

        //- Khu vực hiển thị kết quả
        if summary
          .card.mt-5
            .card-header
              h4.mb-0 Kết quả tóm tắt
            .card-body
              p.card-text(style="white-space: pre-wrap;")= summary