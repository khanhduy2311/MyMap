extends ../views/layouts/default.pug
block main
  .container.mt-5
    .row.justify-content-center
      .col-md-6
        h1.text-center.mb-4 Đăng Nhập

        //- Hiển thị thông báo lỗi nếu có
        if error
          .alert.alert-danger= error

        //- Form này sẽ gửi dữ liệu đến route POST /login
        form(action="/login", method="POST")
          .form-group.mb-3
            label(for="email") Email
            input(
              type="email",
              class="form-control",
              id="email",
              name="email",
              required
            )
          .form-group.mb-3
            label(for="password") Mật khẩu
            input(
              type="password",
              class="form-control",
              id="password",
              name="password",
              required
            )
          
          button(type="submit", class="btn btn-success w-100") Đăng Nhập