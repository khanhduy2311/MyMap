//- File: views/reset-password.pug
doctype html
html(lang="vi")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Đặt Lại Mật Khẩu | MindTree
    link(rel="stylesheet", href="/css/style-login.css") 
    //- CSS nền động (chung với forgot-password & login)
    style.
      body.login-page {
        margin: 0;
        height: 100vh;
        overflow: hidden;
        font-family: "Poppins", sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        color: white;
      }

      #bg-video {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
        filter: brightness(0.6) blur(3px);
      }

      .container {
        position: relative;
        z-index: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 40px;
        background: rgba(0, 0, 0, 0.6);
        padding: 50px 60px;
        border-radius: 16px;
        box-shadow: 0 0 20px rgba(0,0,0,0.3);
      }

      .left-panel h1.logo {
        color: #2ea3f2;
        font-size: 40px;
        margin-bottom: 10px;
      }

      .slogan {
        font-weight: 400;
        font-size: 16px;
        color: #e0e0e0;
      }

      .right-panel {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: stretch;
      }

      .login-form {
        width: 100%;
      }

      .login-form input {
        width: 100%;
        padding: 12px;
        margin-bottom: 15px;
        border: none;
        border-radius: 8px;
        background: rgba(255,255,255,0.1);
        color: white;
        outline: none;
      }

      .btn-login {
        width: 100%;
        padding: 12px;
        border: none;
        border-radius: 8px;
        background-color: #2ea3f2;
        color: white;
        font-weight: 600;
        cursor: pointer;
        transition: 0.3s;
      }

      .btn-login:hover {
        background-color: #1b81c7;
      }

  body.login-page
    //- Nền động (video nền, dùng chung với login & forgot-password)
    video#bg-video(autoplay muted loop)
      source(src="/videos/reset.mp4" type="video/mp4")

    .container
      .left-panel
        h1.logo MindTree
        h2.slogan Tạo một mật khẩu mới (nhưng hãy nhớ nó nhé!).

      .right-panel
        .login-form
          if error_msg && error_msg.length > 0
            .alert.alert-danger= error_msg
          h4.mb-3(style="font-weight: 600;") Tạo mật khẩu mới
          form(action=`/reset-password/${token}`, method="POST")
            div
              input(type="password", name="password", placeholder="Mật khẩu mới", required)
            div
              input(type="password", name="confirmPassword", placeholder="Xác nhận mật khẩu mới", required)
            div
              button(type="submit", class="btn-login") Đặt lại mật khẩu
