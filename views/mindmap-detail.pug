extends ../views/layouts/default.pug
block main
  .container.mt-4
    //- Nút quay về
    a.btn.btn-outline-secondary.mb-4(href="/dashboard")
      i.fas.fa-arrow-left.me-2
      | Quay về Dashboard

    //- Hiển thị tiêu đề chính
    h1.mb-4= mindmap.title

    //- Hiển thị nội dung đã tóm tắt
    .card
      .card-body
        h5.card-title Tóm tắt nội dung
        //- Dùng thẻ <pre> để giữ nguyên định dạng và xuống dòng của JSON
        pre.bg-light.p-3.rounded
          code= JSON.stringify(mindmap.content, null, 2)