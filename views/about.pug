    script.
      document.addEventListener('DOMContentLoaded', function() {
        const heroContent = document.querySelector('.hero-content');
        const teamSection = document.querySelector('.team-section');

        // Sau 3.5s hero fade-out
        setTimeout(() => {
          if (heroContent) {
            heroContent.style.opacity = '0';
            heroContent.style.transform = 'translate(-50%, calc(-50% - 60px)) scale(0.9)';
            heroContent.style.filter = 'blur(20px)';
            heroContent.style.transition = 'all 1.2s ease-in-out';
          }

          // Sau khi hero biến mất xong, team fade-in
          setTimeout(() => {
            if (teamSection) {
              teamSection.style.opacity = '1';
              teamSection.style.visibility = 'visible';
              teamSection.style.transform = 'scale(1) translateY(0)';
            }
          }, 1200);
        }, 3500);

        // Clean up duplicate stars and particles
        const starsContainer = document.querySelector('.stars');
        while (starsContainer.children.length > 60) {
          starsContainer.removeChild(starsContainer.lastChild);
        }

        const particlesContainer = document.querySelector('.floating-particles');
        while (particlesContainer.children.length > 15) {
          particlesContainer.removeChild(particlesContainer.lastChild);
        }
      });
