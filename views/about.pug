extends ../views/layouts/defaultHome.pug

block main
  style.
    :root {
      --primary: #8A2BE2;
      --secondary: #00CED1;
      --accent: #FF69B4;
      --dark-blue: #0f1b33;
      --light-blue: #1a2d4d;
      --text-light: #ffffff;
      --text-muted: rgba(255, 255, 255, 0.8);
    }

    body {
      overflow-x: hidden;
      background: linear-gradient(135deg, var(--dark-blue) 0%, var(--light-blue) 100%);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 0;
      padding: 0;
      min-height: 100vh;
    }

    .cinematic-bg {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
      overflow: hidden;
    }

    .bg-layer {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: 
        radial-gradient(circle at 20% 80%, rgba(138, 43, 226, 0.3) 0%, transparent 50%),
        radial-gradient(circle at 80% 20%, rgba(0, 206, 209, 0.3) 0%, transparent 50%),
        radial-gradient(circle at 40% 40%, rgba(255, 105, 180, 0.2) 0%, transparent 50%);
      animation: gradientShift 8s ease-in-out infinite;
    }

    @keyframes gradientShift {
      0%, 100% {
        transform: scale(1) rotate(0deg);
        opacity: 0.8;
      }
      33% {
        transform: scale(1.1) rotate(120deg);
        opacity: 1;
      }
      66% {
        transform: scale(1.05) rotate(240deg);
        opacity: 0.9;
      }
    }

    .floating-particles {
      position: absolute;
      width: 100%;
      height: 100%;
    }

    .particle {
      position: absolute;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 50%;
      animation: float 6s infinite ease-in-out;
    }

    @keyframes float {
      0%, 100% {
        transform: translateY(0px) translateX(0px) scale(1);
        opacity: 0.3;
      }
      33% {
        transform: translateY(-20px) translateX(10px) scale(1.1);
        opacity: 0.6;
      }
      66% {
        transform: translateY(10px) translateX(-15px) scale(0.9);
        opacity: 0.4;
      }
    }

    .header-container {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      z-index: 1000;
      padding: 15px 0;
      background: rgba(15, 27, 51, 0.9);
      backdrop-filter: blur(20px);
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .nav-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 40px;
    }

    .logo-section {
      display: flex;
      align-items: center;
      gap: 30px;
    }

    .innovation-badge {
      background: linear-gradient(135deg, var(--primary), var(--secondary));
      padding: 8px 20px;
      border-radius: 25px;
      font-size: 0.9rem;
      font-weight: 700;
      color: white;
      text-transform: uppercase;
      letter-spacing: 1px;
      box-shadow: 0 5px 20px rgba(138, 43, 226, 0.4);
      animation: badgeGlow 3s ease-in-out infinite alternate;
    }

    @keyframes badgeGlow {
      0% {
        box-shadow: 0 5px 20px rgba(138, 43, 226, 0.4);
        transform: scale(1);
      }
      100% {
        box-shadow: 0 5px 30px rgba(0, 206, 209, 0.6), 0 0 40px rgba(138, 43, 226, 0.3);
        transform: scale(1.05);
      }
    }

    .auth-buttons {
      display: flex;
      gap: 15px;
      align-items: center;
    }

    .login-btn {
      padding: 12px 35px;
      background: linear-gradient(135deg, var(--primary), var(--secondary));
      color: white;
      text-decoration: none;
      border-radius: 25px;
      font-weight: 700;
      font-size: 1rem;
      border: none;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 5px 20px rgba(138, 43, 226, 0.4);
      position: relative;
      overflow: hidden;
    }

    .login-btn::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
      transition: left 0.5s ease;
    }

    .login-btn:hover::before {
      left: 100%;
    }

    .login-btn:hover {
      transform: translateY(-3px) scale(1.05);
      box-shadow: 0 10px 30px rgba(138, 43, 226, 0.6), 0 0 40px rgba(0, 206, 209, 0.3);
    }

    .register-btn {
      padding: 12px 30px;
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      color: var(--text-light);
      text-decoration: none;
      border-radius: 25px;
      font-weight: 600;
      font-size: 1rem;
      border: 1px solid rgba(255, 255, 255, 0.2);
      transition: all 0.3s ease;
    }

    .register-btn:hover {
      background: rgba(255, 255, 255, 0.15);
      border-color: var(--secondary);
      transform: translateY(-2px);
    }

    .page-wrapper {
      min-height: 100vh;
      position: relative;
      padding-top: 120px;
      padding-bottom: 80px; /* Space for footer */
    }

    .about-container {
      position: relative;
      min-height: calc(100vh - 200px);
    }

    .about-hero {
    position: relative;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    }

    .hero-content {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      z-index: 3;
      text-align: center;
      color: var(--text-light);
      padding: 50px 20px;
      width: 100%;
      transition: all 1.2s ease-in-out;
    }


    .hero-title {
      font-size: 4.5rem;
      font-weight: 900;
      background: linear-gradient(135deg, var(--secondary), var(--primary), var(--accent));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      margin-bottom: 2rem;
      text-shadow: 
        0 0 30px rgba(0, 206, 209, 0.3),
        0 0 60px rgba(138, 43, 226, 0.2);
      animation: titleEntrance 2s ease-out;
      opacity: 0;
      animation-fill-mode: forwards;
      letter-spacing: 2px;
    }

    @keyframes titleEntrance {
      0% {
        opacity: 0;
        transform: translateY(-80px) scale(0.8);
        filter: blur(10px);
      }
      100% {
        opacity: 1;
        transform: translateY(0) scale(1);
        filter: blur(0);
      }
    }

    .hero-subtitle {
      font-size: 1.6rem;
      margin-bottom: 4rem;
      color: var(--text-muted);
      text-shadow: 0 2px 20px rgba(0, 0, 0, 0.5);
      animation: subtitleEntrance 2.5s ease-out 0.8s both;
      font-weight: 300;
      letter-spacing: 1px;
    }

    @keyframes subtitleEntrance {
      0% {
        opacity: 0;
        transform: translateY(50px) rotateX(90deg);
      }
      100% {
        opacity: 1;
        transform: translateY(0) rotateX(0);
      }
    }

    .team-section {
      position: absolute;
      top: 0px;
      left: 0;
      width: 100%;
      height:70%;
      display: flex;
      align-items: center;
      justify-content: center;
      opacity: 0;
      visibility: hidden;
      transform: scale(0.9) translateY(40px);
      transition: all 1.2s ease-in-out;
      z-index: 2;
    }


    @keyframes teamReveal {
      0% {
        opacity: 0;
        transform: scale(0.8) translateY(100px);
        filter: blur(20px);
      }
      100% {
        opacity: 1;
        transform: scale(1) translateY(0);
        filter: blur(0);
      }
    }

    .team-grid {
      display: grid;
      grid-template-columns: repeat(3, 380px);
      gap: 3rem;
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 40px 50px; /* Added bottom padding */
    }

    .team-card {
